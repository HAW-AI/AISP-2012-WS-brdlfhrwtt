h1 #{@group.name} - #{link_to @kindergarten.name, @kindergarten}

h2= ChildrenGroup.model_name.human
p.detail= t("children", count: @group.children.count)
ul.overview
  - @group.children.each do |child|
    li= link_to child.name, child

h2= Waitlist.model_name.human
p.detail= t("children", count: @group.waiting_children.count)
= simple_form_for @group do |form|
  ol.overview
      = form.simple_fields_for :waitlists do |waitlist_form|
        = link_to waitlist_form.object.child.name, waitlist_form.object.child
        span Verschieben auf Platz #{waitlist_form.input :position, label: false} (bisheriger Platzhalter f√§llt nach hinten)
        br

  = form.submit
